<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numeric Control"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Up Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Up"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/upValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/upSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_background"
                    android:contentDescription="Send Up Command" />
            </LinearLayout>

            <!-- Down Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Down"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/downValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/downSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_background"
                    android:contentDescription="Send Down Command" />
            </LinearLayout>

            <!-- Left Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Left"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/leftValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/leftSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_background"
                    android:contentDescription="Send Left Command" />
            </LinearLayout>

            <!-- Right Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Right"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/rightValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/rightSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_background"
                    android:contentDescription="Send Right Command" />
            </LinearLayout>

            <!-- Clockwise Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Clockwise"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/clockwiseValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/clockwiseSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_background"
                    android:contentDescription="Send Clockwise Command" />
            </LinearLayout>

            <!-- Anti-clockwise Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Anti-clockwise"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/anticlockwiseValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/anticlockwiseSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_background"
                    android:contentDescription="Send Anti-clockwise Command" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout> 