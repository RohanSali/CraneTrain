            android:layout_rowWeight="1" />

        <include
            android:id="@+id/camera4"
            layout="@layout/camera_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <include
            android:id="@+id/camera5"
            layout="@layout/camera_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
