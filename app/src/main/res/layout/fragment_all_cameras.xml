<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Camera 1 (Device Camera) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="8dp"
                    android:text="Camera 1 (Device)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.camera.view.PreviewView
                        android:id="@+id/camera1Preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/camera1NoSignal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0D47A1"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="48dp"
                            android:src="@drawable/no_signal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/black"
                            android:padding="8dp"
                            android:text="NO SIGNAL"
                            android:textColor="#FFD700"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Camera 2 (USB) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="Camera 2 (USB)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <SurfaceView
                        android:id="@+id/camera2Preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/camera2NoSignal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0D47A1"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="48dp"
                            android:src="@drawable/no_signal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/black"
                            android:padding="8dp"
                            android:text="NO SIGNAL"
                            android:textColor="#FFD700"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Camera 3 (USB) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:padding="8dp"
                    android:text="Camera 3 (USB)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <SurfaceView
                        android:id="@+id/camera3Preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/camera3NoSignal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0D47A1"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="48dp"
                            android:src="@drawable/no_signal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/black"
                            android:padding="8dp"
                            android:text="NO SIGNAL"
                            android:textColor="#FFD700"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Camera 4 (USB) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E91E63"
                    android:padding="8dp"
                    android:text="Camera 4 (USB)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <SurfaceView
                        android:id="@+id/camera4Preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/camera4NoSignal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0D47A1"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="48dp"
                            android:src="@drawable/no_signal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/black"
                            android:padding="8dp"
                            android:text="NO SIGNAL"
                            android:textColor="#FFD700"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView> 